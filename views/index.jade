extends layout

block content
  h1= title
  p Welcome to #{title}

  div
    p Enter club information
    form(method='post', action='/add')
      div
        label Name
        br
        input#name(type='text', name='name')
      div
        label Country
        br
        select#countries(name='countries')
          each item in items
            option(value=item) #{item}
      div
        label City
        br
        input#city(type='text', name='city')
      div
        label Club Coefficient
        br
        input#clubcoefficient(type='text', name='clubcoefficient')
      div
        label Country Coefficient
        br
        input#countryoefficient(type='text', name='countrycoefficient')
      div
        label League Champion
        br
        input#leaguechampion(type='radio', name='leaguechampion', value='yes')
        | Yes
        input#leaguechampion(type='radio', name='leaguechampion', value='no')
        | No
      div
        label Champions League Winner
        br
        input#clwinner(type='radio', name='clwinner', value='yes')
        | Yes
        input#clwinner(type='radio', name='clwinner', value='no')
        | No
      div
        button(type="submit") Submit

  div
    form(method="get", action="/list")
      button(type="submit") List Clubs